<idea-plugin>
    <id>com.fromLab.idea_plugin_v1</id>
    <name>Plugin display name here</name>
    <vendor email="support@yourcompany.com" url="http://www.yourcompany.com">YourCompany</vendor>

    <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow anchor="right"
                    id="Select Task Tool"
                    canCloseContents="false"
                    factoryClass="com.fromLab.GUI.window.TaskToolWindow" icon="/icons/task.png">

        </toolWindow>
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="Plugin" text="PMPlugin" description="Plugin for PMS">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="SelectTaskPlugin" class="com.fromLab.action.SelectTaskAction" text="SelectTaskPlugin"
                    description="A plugin for selecting task">
            </action>
        </group>
            <action id="Task JavaDoc" class="com.fromLab.action.TaskJavaDoc.JavaDocAction" text="Task JavaDoc"
                    description="generate JavaDoc about Task information ">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
            <action id="Keyword Prompt and Complete" class="com.fromLab.action.KeywordPopupList.PopupListAction" text="Keyword Prompt and Complete"
                    description="pop up a list of keywords and complete the keyword and its value">
                <add-to-group group-id="GenerateGroup" anchor="last"/>
            </action>
    </actions>
</idea-plugin>