    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="Plugin" text="PMPlugin" description="Plugin for PMS">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="SelectTaskPlugin" class="com.fromLab.action.SelectTaskAction" text="SelectTaskPlugin"
                    description="A plugin for selecting task">

            </action>
        </group>
    </actions>
</idea-plugin>